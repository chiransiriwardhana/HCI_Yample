<%- include ../commun-back/head-back.ejs %>

<br>

<div class="container" >

    <!--style="background-color: #cccccc;"-->
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            
            <div class="account-wall">
                <h1 class="text-center login-title">Sign in to Administration Panel</h1><br>
                <img class="profile-img" src="/img/ymple/ymple-square.png"
                     alt="" style="margin-bottom: 10%;">
                     <% if (typeof success !== 'undefined') { %>
                        <div class="alert alert-danger" 
                          style="margin-left:15px; margin-right:15px; border-radius: 0px; text-align: center;">
                            <strong>Username or password is incorrect</strong>
                          </div>
                    <% } %>
                <form class="form-signin" action="/admin/login_validation" method="post" style = "margin-bottom: 15%;">
                    <input name="email" type="text" class="form-control" placeholder="Email" required autofocus
                    
                     style="margin-bottom: 20px; border-radius: 3px;">
                    <input name ="password" type="password" class="form-control" placeholder="Password" required
                    
                    style="margin-bottom:20px; border-radius:3px">

                    <%if (typeof demoMode == 'undefined'){ %>

                    <p>Default Credential<br> Email: admin@admin.com, Pass: admin </p>

                    <%}else{%>

                    <p>Demo Credential<br> Email: admin@admin.com, Pass: admin<br>
                        <span style="color: red;">On Demo you will not be able to modify product</span></p>

                    <%}%>


                    <button class="btn btn-lg  btn-block" type="submit" style="margin-bottom: 30px; background-color:#66cac4 ;">
                        Sign in</button>


                    

                    <label class="checkbox pull-left">
                        <input type="checkbox" value="remember-me">
                        Remember me
                    </label>
                    <!--a href="#" class="pull-right need-help">Need help? </a><span class="clearfix"></span-->
                </form>
            </div>
            <!--a href="#" class="text-center new-account">Create an account </a-->
        </div>
    </div>
</div>


